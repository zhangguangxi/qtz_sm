	</bean> -->
	<mvc:annotation-driven />
	<context:component-scan base-package="com.qtz.sm"/>
    <context:component-scan base-package="com.mangofactory.swagger"/>
	<!-- 引入dubbo文件 -->
	<import resource="dubbo.xml"/>

</beans>
